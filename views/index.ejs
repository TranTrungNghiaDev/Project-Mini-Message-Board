<html>
    <head>
        <title>Home</title>
    </head>
    <body>
        <h1>This is a home page</h1>
        <h2>User messages</h2>
        <% messages.forEach(message => { %>
            <form action="/detail" method="post">
                <label for="user">User: </label>
                <input type="text" name="username" value="<%=message.username  %>" readonly>
                <label for="message">Message: </label>
                <input type="text" name="message" value="<%=message.text  %>" readonly>
                <label for="added">Added: </label>
                <input type="date" name="added" value="<%=message.added  %>" readonly>
                <button type="submit">Open</button>
            </form>
        <% }); %>
        
    </body>
</html>